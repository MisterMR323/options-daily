name: Daily Options Report

on:
  schedule:
    # GitHub cron uses UTC. 6:30 AM Pacific ≈ 13:30 UTC
    - cron: "30 13 * * 1-5"
  workflow_dispatch: {}   # lets you trigger it manually

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install dependencies
        run: pip install -r requirements.txt

      - name: Run report (customize watchlist)
        env:
          POLYGON_API_KEY: ${{ secrets.POLYGON_API_KEY }}
        run: |
          python live_options_dashboard.py --guidance AMD NVDA AAPL TSLA SPY

      - name: Upload artifacts
        uses: actions/upload-artifact@v4
        with:
          name: CMR-daily
          path: |
            CMR_Options_Report_DEMO.html
            CMR_Action_Notes_DEMO.txt

      # OPTIONAL: Email the files (requires SendGrid or similar)
      - name: Email report
        if: ${{ secrets.SENDGRID_API_KEY && secrets.RECIPIENT_EMAIL }}
        uses: dawidd6/action-send-mail@v3
        with:
          server_address: smtp.sendgrid.net
          server_port: 587
          username: apikey
          password: ${{ secrets.SENDGRID_API_KEY }}
          subject: "CMR Options Report – ${{ github.run_id }}"
          to: ${{ secrets.RECIPIENT_EMAIL }}
          from: "cmr-reports@yourdomain.com"
          secure: starttls
          html_body: |
            <p>Attached are today's files.</p>
          attachments: |
            CMR_Options_Report_DEMO.html
            CMR_Action_Notes_DEMO.txt
